#include <dt-bindings/zmk/matrix_transform.h>

/ {
	chosen {
		zephyr,display = &oled;
		zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <5>;
		rows = <4>;
// Left-hand side key mapping (mirrored for right-hand side)
// | SW1  | SW2  | SW3  | SW4  | SW5  |
// | SW6  | SW7  | SW8  | SW9  | SW10 |
// | SW11 | SW12 | SW13 | SW14 | SW15 |
//         | SW16 | SW17 | SW18 |
		map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)  // Row 0
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)  // Row 1
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)  // Row 2
       RC(3,1) RC(3,2) RC(3,3)            // Row 3 (last row with 3 keys)
		>;
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";
		label = "KSCAN";

		rows = <4>;
		columns = <5>;
		row-gpios
			= <&pro_micro 0 GPIO_ACTIVE_LOW>
			, <&pro_micro 1 GPIO_ACTIVE_LOW>
			, <&pro_micro 2 GPIO_ACTIVE_LOW>
			, <&pro_micro 3 GPIO_ACTIVE_LOW>;

		col-gpios
			= <&pro_micro 4 GPIO_ACTIVE_LOW>
			, <&pro_micro 5 GPIO_ACTIVE_LOW>
			, <&pro_micro 6 GPIO_ACTIVE_LOW>
			, <&pro_micro 7 GPIO_ACTIVE_LOW>
			, <&pro_micro 8 GPIO_ACTIVE_LOW>;

		diode-direction = "col2row";
	};

	oled: ssd1306@3c {
		compatible = "solomon,ssd1306fb";
		reg = <0x3c>;
		label = "DISPLAY";
		width = <128>;
		height = <32>;
		segment-offset = <0>;
		page-offset = <0>;
		display-offset = <0>;
		multiplex-ratio = <31>;
		segment-remap;
		com-invdir;
		com-sequential;
		prechargep = <0x22>;
	};
};
