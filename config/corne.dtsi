#include <dt-bindings/zmk/matrix_transform.h>

/ {
	chosen {
		zephyr,display = &oled;
		zmk,kscan = &kscan0;
		zmk,matrix_transform = &default_transform;
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <5>;
		rows = <4>;
// Left-hand side key mapping (mirrored for right-hand side)
// | SW1  | SW2  | SW3  | SW4  | SW5  |
// | SW6  | SW7  | SW8  | SW9  | SW10 |
// | SW11 | SW12 | SW13 | SW14 | SW15 |
//         | SW16 | SW17 | SW18 |
		map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)  // Row 0
RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)  // Row 1
RC(1,10) RC(1,11) RC(1,12) RC(1,13) RC(1,14)  // Row 2
       RC(2,17) RC(2,18) RC(2,19)            // Row 3 (last row with 3 keys)
		>;
	};
};
